<div class="header-v2">
  <div class="header-v2__container flex justify-between items-center w-full h-[200px]">
    <div class="header-v2__logo">
      <a href="{{ shop.url }}" class="header-v2__logo-link">
        <img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" class="header-v2__logo-image">
      </a>
    </div>
    <nav class="header-v2__navigation">
      <ul class="header-v2__menu">
        {% for link in linklists['main-menu'].links %}
          <li class="header-v2__menu-item">
            <a href="{{ link.url }}" class="header-v2__menu-link">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</div>
{{
  % schema %}
  {
  "name": "Header V2",
  "settings": [
  {
  "type": "text",
  "id": "logo_text",
  "label": "Logo Text",
  "default": "Your Logo"
  },
  {
  "type": "link_list",
  "id": "main_menu",
  "label": "Main Menu"
  }
  ],
  "presets": [
  {
  "name": "Header V2",
  "category": "Header"
  }
  ]
  }
  {% endschema %
}}
